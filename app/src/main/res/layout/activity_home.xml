<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.bored.boredom.getbored.boredashell.theboredbutton.views.home.HomeViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.home.HomeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info_layout"
            android:orientation="vertical">

            <com.startapp.sdk.ads.banner.Banner
                android:id="@+id/startAppBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/muli"
                android:text=""
                android:textAlignment="center"
                android:textColor="#717498"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/muli"
                android:text=""
                android:textAlignment="center"
                android:textColor="#131336"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:src="@drawable/ic_bored" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttons_layout"
            android:weightSum="3">

            <io.armcha.elasticview.ElasticView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/participants_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="Participants"
                        android:textColor="#262646"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:indeterminateTint="@color/purple_500"
                        android:progress="100" />

                </LinearLayout>


            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accessibility_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="25%"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="Accessibility"
                        android:textColor="#262646"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progress_accessibility"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:indeterminateTint="@color/purple_500"
                        android:progress="25" />

                </LinearLayout>


            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="45%"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:text="Price"
                        android:textColor="#262646"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progress_price"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:indeterminateTint="@color/purple_500"
                        android:progress="45" />

                </LinearLayout>


            </io.armcha.elasticview.ElasticView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <io.armcha.elasticview.ElasticView
                android:id="@+id/link_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/purple_500"
                android:onClick="@{()-> viewModel.getLink()}"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/muli"
                    android:text="Link"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:id="@+id/new_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/second_color"
                android:onClick="@{()-> viewModel.getActivity()}"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/muli"
                    android:text="New Activity"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </io.armcha.elasticview.ElasticView>

            <io.armcha.elasticview.ElasticView
                android:id="@+id/videos_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/third_color"
                android:onClick="@{()-> viewModel.openActivity()}"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/muli"
                    android:text="Videos"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </io.armcha.elasticview.ElasticView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_error"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/img_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/error_txt"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/error_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tryagain_txt"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/muli"
                android:text=""
                android:textAlignment="center"
                android:textColor="#131336"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tryagain_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/muli"
                android:onClick="@{()-> viewModel.getActivity()}"
                android:text="Try again"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="19dp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>

    </RelativeLayout>

</layout>